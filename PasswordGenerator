import string
import random
import pyperclip

class Password:
    letters = string.ascii_letters #The algorithm can take any letter from this library, regardless of whether it is upper or lower case
    numbers = string.digits #The algorithm can take any numbers from this library
    special_characters = "!@#$%^&*()-_=+[]{}|;:'\",.<>/?" #It doesnt exit a  specific library for special character so you need to definie some special characters you want to use

#Constructor for the Password class
    def __init__(self, length):
        self.length = length


#Method to generate a password
    def generate_password(self):
        #Checks if the specified length is at least 12 characters
        if self.length <= 11:
            print("The password must be at least 12 characters long!")
            return None
        else:
            #Combines letters, numbers, and special characters
            characters = self.letters + self.numbers + self.special_characters
            #Generates a password of specified length
            password = ''.join(random.choice(characters) for _ in range(self.length))
            return password
            
def main():
    try:
        #Gets the desired password length from the user
        length = int(input("Enter the Password length: "))
        #Creates an instance of the Password class
        password_generator = Password(length)
        #Generates a password and copies it to the clipboard
        generated_password = password_generator.generate_password()
        pyperclip.copy(generated_password)

        if generated_password:
            #Prints the generated password and a message about copying to the clipboard
            print(generated_password, pyperclip.paste()) 
    except ValueError:
        #Handles the case where the user enters an invalid input
        print("Please enter a valid number for the password length!")
        

# Executes the main function when the script is run
if __name__ == "__main__":
    main()
